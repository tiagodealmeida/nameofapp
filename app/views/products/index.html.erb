<p id="notice"><%= notice %></p>

<div class="header">
  <h1>Products</h1>
</div>

<div class="container-fluid">
  <div class="row products">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <h1><%= product.name %></h1>
        <p><%= product.description %></p>
        <p><%= product.frame_color %></p>
        <p><%= product.price %></p>
        <p><%= link_to 'Show / ', product %><%= link_to 'Edit / ', edit_product_path(product) %><%= link_to 'Destroy ', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
    <p class="new_product"><%= link_to 'New Product', new_product_path %></p>
  </div>
</div>
