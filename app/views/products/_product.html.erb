<div class="col-sm-6 col-md-4 col-lg-3">
  <%= image_tag(product.image_url, class: "img-responsive") unless product.image_url.blank? %>
  <h1><%= product.name %></h1>
  <p><%= product.description %></p>
  <p>Frame Color: <%= product.frame_color %></p>
  <p><%= product.price %><span class="glyphicon glyphicon-euro"></span></p>
  <p><%= link_to 'Show / ', product %><%= link_to 'Edit / ', edit_product_path(product) %>
  <%= link_to 'Destroy ', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>
