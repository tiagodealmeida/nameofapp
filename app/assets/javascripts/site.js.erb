$(document).on('turbolinks:load', function(){
  $('.rating').raty( {
    path: '/assets',
    starHalf:"<%= image_path 'star-half.png' %>",
    starOff:"<%= image_path 'star-off.png' %>",
    starOn:"<%= image_path 'star-on.png' %>",
    scoreName: 'comment[rating]'
  });
  $('.rated').raty({
    path: '/assets',
    starHalf:"<%= image_path 'star-half.png' %>",
    starOff:"<%= image_path 'star-off.png' %>",
    starOn:"<%= image_path 'star-on.png' %>",
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
});
